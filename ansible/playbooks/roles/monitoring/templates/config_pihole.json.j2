                {
                    "name": "Stopped",
                    "count": 1,
                    "value": 0.9,
                    "exceedance": "OVER",
                    "reminder_age": "PT24H"
                }
            ],
            "service": "wg-quick@wg0"
        },
        {
            "name": "SYSTEMD",
            "title": "rsyslog status",
            "alarms": [
                {
                    "name": "Stopped",
                    "count": 1,
                    "value": 0.9,
                    "exceedance": "OVER",
                    "reminder_age": "PT24H"
                }
            ],
            "service": "rsyslog"
        },
        {
            "name": "PING",
            "title": "Ping to internet",
            "alarms": [
                {
                    "name": "Slow",
                    "count": 10,
                    "value": 100,
                    "exceedance": "OVER",
                    "reminder_age": "PT12H"
                },
                {
                    "name": "Failing",
                    "count": 10,
                    "value": -0.5,
                    "exceedance": "UNDER",
                    "reminder_age": "PT12H"
                }
            ],
            "ip": "8.8.8.8"
        },
        {
            "name": "PING",
