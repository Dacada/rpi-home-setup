        {
            "name": "PACKAGE_MANAGER",
            "title": "Pending package upgrades",
            "alarms": [
                {
                    "name": "High",
                    "count": 1,
                    "value": 10,
                    "exceedance": "OVER",
                    "reminder_age": "PT24H"
                }
            ],
            "package_manager": "APT",
            "delay": 60
        }
    ]
}
